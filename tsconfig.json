{
  "compilerOptions": {
    "noImplicitAny": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "client/dist"
  ]
}